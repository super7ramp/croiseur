<?xml version="1.0" encoding="UTF-8"?>

<?import com.gitlab.super7ramp.crosswords.gui.fx.view.CrosswordGrid?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxHeight="-Infinity"
      maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/17"
      fx:controller="com.gitlab.super7ramp.crosswords.gui.binder.CrosswordSolverBinder">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <CrosswordGrid fx:id="grid" maxHeight="1.7976931348623157E308" maxWidth="600.0"
                   prefHeight="300.0" VBox.vgrow="ALWAYS"/>
    <ComboBox fx:id="dictionaryComboBox" maxWidth="600.0" promptText="Select dictionary..."
              VBox.vgrow="NEVER"/>
    <Button fx:id="solveButton" maxWidth="600.0" onAction="#onSolveButtonClicked"
            text="Solve" VBox.vgrow="NEVER"/>
</VBox>
