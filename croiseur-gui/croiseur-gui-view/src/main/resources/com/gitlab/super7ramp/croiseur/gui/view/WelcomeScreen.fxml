<?import com.gitlab.super7ramp.croiseur.gui.view.SavedPuzzleListCell?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" id="root-vbox" stylesheets="@WelcomeScreen.css"
         type="VBox" xmlns="http://javafx.com/javafx/17">
    <VBox id="welcome-vbox">
        <!-- fitHeight and fitWidth are not settable via css. -->
        <ImageView id="welcome-image-view" fitHeight="200" fitWidth="200" preserveRatio="true"/>
        <Text id="welcome-text" text="%welcome-text"/>
        <Text id="welcome-version" text="%version-text"/>
    </VBox>
    <VBox id="puzzles-vbox">
        <HBox id="puzzle-actions-hbox">
            <TextField fx:id="searchTextField" promptText="%search-puzzles-prompt-text" HBox.hgrow="ALWAYS"/>
            <Button fx:id="newPuzzleButton" text="New Puzzle"/>
            <Button fx:id="openPuzzleButton" text="Open Puzzle"/>
        </HBox>
        <ListView fx:id="recentPuzzleListView">
            <SavedPuzzleListCell/>
            <SavedPuzzleListCell/>
            <SavedPuzzleListCell/>
            <placeholder>
                <Text text="%no-recent-puzzle"/>
            </placeholder>
        </ListView>
    </VBox>
</fx:root>
