<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import re.belv.croiseur.gui.view.SavedPuzzleSelector?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      stylesheets="@WelcomeScreenView.css"
      fx:controller="re.belv.croiseur.gui.WelcomeScreenController">
    <VBox id="welcome-vbox">
        <!-- fitHeight and fitWidth are not settable via css. -->
        <ImageView id="welcome-image-view" fitHeight="196" fitWidth="196" preserveRatio="true"/>
        <Text id="welcome-text" text="%welcome-text"/>
        <Text id="welcome-version" text="%version-text"/>
    </VBox>
    <SavedPuzzleSelector fx:id="selectorView" id="puzzles-vbox"/>
</VBox>